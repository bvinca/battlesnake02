root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Special rules for Markdown files
[*.md]
trim_trailing_whitespace = false

# Special rules for JSON files
[*.json]
indent_size = 2

# Special rules for YAML files
[*.yml]
indent_size = 2
[CHANGELOD.md]
indent_size = 4
