{
  "plugins": ["plugins/markdown"],
  "recurseDepth": 10,
  "source": {
    "include": [
      "index.js",
      "floodFill/floodFill.js",
      "head-to-head-mov.js",
      "manhattan-food.js",
      "snakes-movement-to-tail.js",
      "sum.js"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "jsdocs/",
    "encoding": "utf8",
    "recurse": true,   
    "verbose": true
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true
    }
  }
}